{{!-- <div class="container"> --}}
<div class="p-3 mb-2 bg-warning text-dark body-text">
  <div class="row justify-content-md-center">
    {{!-- create two columns --}}
    <div class="col-3">
      <h2>Create a Burger</h2>
      <form id="burger-form">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="burger name" name="burger-name" />
        </div>
        <button class="btn btn-block btn-outline-success add-btn">Add Burger</button>
        
      </form>
    </div>
  </div>

  <br>
  <hr>
  <br>

  <div class="row">
    <div class="col  col-lg-1">
    </div>

    <div class="col  col-lg-5">
      <div class="card mb-4">
        <h3 class="card-header">
          Burgers to Devour
        </h3>
        <ul class="list-group-flush">
          {{!-- loop through burgers from handlebars and print out burgers that are NOT devoured --}}
          {{#each burgers}}
          {{#unless this.devoured}}
          <li class="list-group-item d-flex justify-content-between align-items-center align-center">
            <h4>{{this.burger_name}}</h4>
            <div>
              {{!-- devour a burger --}}
              <button class="btn btn-info devourBurger manage-burger" data-burgerid="{{this.id}}">
                Devour Me
              </button>
              {{!-- delete a burger --}}
              <button class="btn btn-danger deleteBurger manage-burger" data-burgerid="{{this.id}}">
                Delete Me
              </button>
            </div>
          </li>
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="col  col-lg-1">
    </div>


    <div class="col  col-lg-4">
      <div class="card mb-4">
        <h3 class="card-header">
          Burgers Devoured
        </h3>
        <ul class="list-group-flush">
          {{!-- loop through burgers from handlebars and print out burgers that are  devoured --}}
          {{#each burgers}}
          {{#if this.devoured}}
          <li class="list-group-item d-flex justify-content-between align-items-center align-center">
            <h4>{{this.burger_name}}</h4>
            <div>
              {{!-- delete a burger --}}
              <button class="btn btn-danger deleteBurger manage-burger" data-burgerid="{{this.id}}">
                Delete Me
              </button>
            </div>
          </li>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="col  col-lg-1">
    </div>

  </div>
</div>
{{!-- </div> --}}

<script src="./assets/js/burgers.js" type="text/javascript"></script>